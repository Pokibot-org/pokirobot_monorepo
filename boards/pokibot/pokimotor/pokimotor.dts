/dts-v1/;
#include <st/g4/stm32g474Xe.dtsi>
#include <st/g4/stm32g474r(b-c-e)tx-pinctrl.dtsi>
#include <zephyr/dt-bindings/input/input-event-codes.h>

/ {
	model = "Pokibot pokimotor board";
	compatible = "pokibot,pokimotor";

	chosen {
		zephyr,console = &uart4;
		zephyr,shell-uart = &uart4;
		zephyr,sram = &sram0;
		zephyr,flash = &flash0;
		zephyr,code-partition = &slot0_partition;
	};

	leds: leds {
		compatible = "gpio-leds";
		green_led: led_0 {
			gpios = <&gpioc 3 GPIO_ACTIVE_HIGH>;
		};
		red_led: led_1 {
			gpios = <&gpioc 2 GPIO_ACTIVE_HIGH>;
		};
	};

	pwmleds {
		compatible = "pwm-leds";

		green_pwm_led: green_pwm_led {
			pwms = <&pwm2 1 PWM_MSEC(20) PWM_POLARITY_NORMAL>;
		};
	};

	aliases {
		led0 = &green_led;
		led1 = &red_led;
		mcuboot-led0 = &green_led;
	};
};

&clk_lsi {
	status = "okay";
};

&clk_hsi {
	status = "okay";
};

&clk_hsi48 {
	status = "okay";
};

&pll {
	div-m = <4>;
	mul-n = <85>;
	div-p = <2>;
	div-q = <2>;
	div-r = <2>;
	clocks = <&clk_hsi>;
	status = "okay";
};

&rcc {
	clocks = <&pll>;
	clock-frequency = <DT_FREQ_M(170)>;
	ahb-prescaler = <1>;
	apb1-prescaler = <1>;
	apb2-prescaler = <1>;
};

&usart1 {
    dmas = <&dmamux1 8 25 (STM32_DMA_PERIPH_TX | STM32_DMA_PRIORITY_HIGH)>,
		<&dmamux1 0 24 (STM32_DMA_PERIPH_RX | STM32_DMA_PRIORITY_HIGH)>;
	dma-names = "tx", "rx";
	pinctrl-0 = <&usart1_tx_pc4 &usart1_rx_pc5>;
	pinctrl-names = "default";
	current-speed = <460800>;
	status = "okay";

	uart_bus:uart_bus {
		compatible = "zephyr,uart-bus";
		status = "okay";

		stepper0:stepper0 {
			compatible = "adi,tmc2209-pokibot";
			status = "okay";
			address = <0>;
			micro-step-res = <256>;
			ihold = <5>;
			irun = <31>;
			iholddelay = <10>;
			reverse-shaft;
		};

		stepper1:stepper1 {
			compatible = "adi,tmc2209-pokibot";
			status = "okay";
			address = <1>;

			/* common stepper controller settings */
			micro-step-res = <256>;
			/* tmc specific */
			ihold = <5>;
			irun = <31>;
			iholddelay = <10>;
			reverse-shaft;
		};
		stepper2:stepper2 {
			compatible = "adi,tmc2209-pokibot";
			status = "okay";
			address = <2>;

			/* common stepper controller settings */
			micro-step-res = <256>;
			/* tmc specific */
			ihold = <5>;
			irun = <31>;
			iholddelay = <10>;
			reverse-shaft;
		};
	};
};

&usart2 {
	pinctrl-0 = <&usart2_tx_pa2 &usart2_rx_pb4>;
	pinctrl-names = "default";
	current-speed = <460800>;
	// status = "okay";
};

&usart3 {
	pinctrl-0 = <&usart3_tx_pb9 &usart3_rx_pb8>;
	pinctrl-names = "default";
	current-speed = <460800>;
	// status = "okay";
};

&uart4 {
	pinctrl-0 = <&uart4_tx_pc10 &uart4_rx_pc11>;
	pinctrl-names = "default";
	current-speed = <921600>;
	status = "okay";
};

&lpuart1 {
	pinctrl-0 = <&lpuart1_tx_pb11 &lpuart1_rx_pa3>;
	pinctrl-names = "default";
	current-speed = <115200>;
	status = "okay";
    pokmac_strat: pokmac_strat {
		compatible = "pokibot,pokmac";
		status = "okay";
	};
};



&timers2 {
	status = "okay";

	pwm2: pwm {
		status = "okay";
		pinctrl-0 = <&tim2_ch1_pa5>;
		pinctrl-names = "default";
	};
};

&timers3 {
	st,prescaler = <10000>;
	status = "okay";
	pwm3: pwm {
		status = "okay";
		pinctrl-0 = <&tim3_ch1_pb4>;
		pinctrl-names = "default";
	};
};

&flash0 {
	partitions {
		compatible = "fixed-partitions";
		#address-cells = <1>;
		#size-cells = <1>;

		boot_partition: partition@0 {
			label = "mcuboot";
			reg = <0x00000000 DT_SIZE_K(34)>;
		};
		slot0_partition: partition@8800 {
			label = "image-0";
			reg = <0x00008800 DT_SIZE_K(240)>;
		};
		slot1_partition: partition@44800 {
			label = "image-1";
			reg = <0x00044800 DT_SIZE_K(234)>;
		};
		/* Set 4Kb of storage at the end of the 512Kb of flash */
		storage_partition: partition@7f000 {
			label = "storage";
			reg = <0x0007f000 DT_SIZE_K(4)>;
		};
	};
};

&rng {
	status = "okay";
};

&dma1 {
    status = "okay";
};

&dma2 {
    status = "okay";
};

&dmamux1 {
    status = "okay";
};
